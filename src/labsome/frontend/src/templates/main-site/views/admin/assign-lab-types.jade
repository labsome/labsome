.modal-header
  button.close(type="button" data-dismiss="modal" aria-label="Close")
    span(aria-hidden="true") &times;
  h4.modal-title
    | Hardware Types For
    lab-name(id='lab_id')

mixin type_selection
  ul.list-group
    list.list-group-item(ng-repeat='type in hardware.allTypes')
      .row
        .col-sm-4
          .checkbox
            label
              | &nbsp;
              input(type='checkbox' ng-model='selected_types[type.id]' ng-change='selection_changed()')
              | &nbsp;
              | {{ type.name | titlecase }}
        .col-sm-4
          input.form-control(type='text' ng-model='result.types[type.id].name_singular')
        .col-sm-4
          input.form-control(type='text' ng-model='result.types[type.id].name_plural')

.modal-body
  p
    div
      | Please select the hardware types to include in this lab.
    div
      | For each type you can also specify a different term users will see for that type.
  form(role='form' ng-submit='ok()')
    .panel.panel-default
      +type_selection

.modal-footer
  button.btn.btn-link(type='button' ng-click='cancel()')
    | Cancel
  button.btn.btn-primary(type='button' ng-click='ok()')
    | Save Changes
