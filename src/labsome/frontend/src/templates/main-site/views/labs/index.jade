mixin loading
  .text-center(style={'opacity': '0.5'})
    i.fa.fa-3x.fa-spin.fa-circle-o-notch

mixin no_labs
  .row
    .col-sm-12.col-md-offset-1.col-md-10.col-lg-offset-2.col-lg-8
      .panel.panel-default
        .panel-body
          include no-labs

mixin main
  .container
    ui-view
      span(ng-if='!allLabs.ready')
        +loading
      span(ng-if='allLabs.ready && (allLabs.all.length == 0)')
        +no_labs

+main
